<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content">

    <Preference
        android:clickable="true"
        app:key="connect_spotify"
        app:summary="Connect your Spotify account to enjoy full functionality"
        app:title="Connect with Spotify" >
        <intent
            android:targetPackage="com.example.chatify"
            android:targetClass="com.example.chatify.SpotifyConnect"/>
    </Preference>
    <Preference
        android:clickable="true"
        android:onClick="connectSpotify"
        app:key="delete_account"
        app:summary="Delete your account and your personal data"
        app:title="Delete Account" />

</PreferenceScreen>
